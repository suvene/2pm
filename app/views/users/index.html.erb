<% content_for :submenu do %>
  <ul class="nav nav-pills">
    <li><%= link_to t('menu.sub.settings.general'), { :controller => 'manage' } %></li>
    <li class="active"><%= link_to t('menu.sub.settings.users'), { :controller => 'users' } %></li>
    <li><%= link_to t('menu.sub.settings.groups'), '#' %></li>
  </ul>
<% end %>

<legend><%= t('title.settings.users.list') %></legend>
<%= button_to t('link.new'), new_user_path, { :class => 'btn btn-primary btn-large' } %>
<br />
<br />

<table class="table table-bordered table-condensed table-striped">
  <thead>
  <tr>
    <th></th>
    <th></th>
    <th><%= t('activerecord.attributes.user.cd') %></th>
    <th><%= t('activerecord.attributes.user.nickname') %></th>
    <th><%= t('activerecord.attributes.user.name') %></th>
    <th><%= t('activerecord.attributes.user.mail') %></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
<% @users.each do |user| %>
  <tr>
    <td><%= link_to t('link.show'), user %></td>
    <td><%= link_to t('link.edit'), edit_user_path(user) %></td>
    <td><%= user.cd %></td>
    <td><%= user.nickname %></td>
    <td><%= user.name_l %> <%= user.name_f %></td>
    <td><%= user.mail %></td>
    <td><%= link_to t('link.destroy'), user, confirm: t('link.are_you_sure?'), method: :delete %></td>
  </tr>
<% end %>
  </tbody>
</table>

